<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Time between lecture and notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/timerSpec"
        android:layout_width="50dp"
        android:text="30"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Follow general settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genSettSpec"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <CheckBox
        android:text="Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NotifSpec"
        android:layout_below="@+id/genSettSpec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:checked="false" />

    <CheckBox
        android:text="Mute during lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/muteSpec"
        android:layout_below="@+id/timerSpec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/saveSpec" />
</RelativeLayout>