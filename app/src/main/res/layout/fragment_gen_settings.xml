<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobilecourse.sapp.genSettingsFragment"
    android:layout_marginTop="50dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Time between notification and lecture(min)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/notifGen"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/notifTimerGen"
        android:layout_width="50dp"
        android:text="30"
        android:textAlignment="center"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Mute during lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/muteGen"
        android:checked="true"
        android:layout_below="@+id/notifTimerGen"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/saveGenSettings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Noifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="131dp"
        android:id="@+id/notifGen"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genSettMessage"
        android:layout_above="@+id/saveGenSettings"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>
